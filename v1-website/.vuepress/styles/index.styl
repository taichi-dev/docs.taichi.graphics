/**
 * Custom Styles here.
 *
 * ref：https://v1.vuepress.vuejs.org/config/#index-styl
 */

.home .hero img
  max-width 450px!important

/**
 * cancel the extra margin added by
 * plugin: vuepress-plugin-code-copy
 * also make sure no scroll bar shows up
 */
.code-copy
  margin-top: -0.85rem;
  margin-bottom: -0.85rem;
  // height: 0

/**
 * custom code block labels
 */
div[class~="language-cpp"]:before
  content "c++"

/**
 * cancel the site name since we have
 * a pretty taichi word-logo
 * credit to https://github.com/vuejs/vuepress/issues/100#issuecomment-611327133
 */
.site-name.can-hide
  display: none

// custom blocks
// note
.custom-block.note
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  padding .1rem 1.5rem
  border-left-width .5rem
  border-left-style solid
  margin 1rem 0
  background-color: #f3f5f7
  border-color: #171717

  .custom-block-title
    color: #171717

  .custom-block-title::before
    content: "☯ "

// tip
.custom-block.tip
  .custom-block-title::before
    content: "☯ "

  .custom-block-title
    color: #42b983

// warning
.custom-block.warning
  background-color: #f3f5f7
  border-color: #ffe300

  .custom-block-title
    color: #efcd00

  .custom-block-title::before
    content: "☯ "

// danger
.custom-block.danger
  background-color: #f3f5f7
  border-color: #CC0000

  .custom-block-title
    color: #CC0000

  .custom-block-title::before
    content: "☯ "

// enable text highlights
#inline-blue
  background-color: #2780e3
  color: #fff
  font-size: 95%

#inline-purple
  background-color: #9954bb
  color: #fff
  font-size: 95%

#inline-yellow
  background-color: #f0ad4e
  color: #fff
  font-size: 95%

#inline-green
  background-color: #5cb85c
  color: #fff
  font-size: 95%
